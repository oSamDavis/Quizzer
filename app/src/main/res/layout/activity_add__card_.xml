<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Add_Card_Activity">

    <ImageView
        android:id="@+id/cancel_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="350dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/ic_cancel_icon" />

    <EditText
        android:id="@+id/answer_edit_text"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:hint="Input Flashcard Question"
        android:inputType="text"


        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="184dp" />

    <EditText
        android:id="@+id/question_edit_text"
        android:layout_width= "match_parent"
        android:layout_height="70dp"
        android:layout_margin="20dp"
        android:hint="Input Flashcard Answer"
        android:inputType="text"

        />

    <ImageView
        android:id="@+id/save_icon_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="21dp"
        android:src="@drawable/ic_save_icon" />


</RelativeLayout>